{
  "dashboard": {
    "id": null,
    "title": "أداء التطبيقات - Application Performance",
    "tags": ["saler", "monitoring", "performance", "application"],
    "timezone": "Asia/Riyadh",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
