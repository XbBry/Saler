    "panels": [
      {
        "id": 1,
        "title": "استجابة API حسب المعرف - API Response by Endpoint",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_bucket{job=\"saler-api\",endpoint!=\"\"}[5m])) by (le)",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.001},
                {"color": "red", "value": 0.01}
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "calculate": false,
          "calculation": {"xBuckets": {"mode": "size", "value": "auto"}},
          "color": {
            "scheme": "Viridis",
            "fill": "scale",
            "mode": "opacity",
            "scale": "exponential",
            "steps": 128
          },
          "exemplars": {
            "color": "rgba(255, 0, 255, 0.7)"
          },
          "legend": {
            "show": true
          },
          "rowsFrame": {
            "mode": "index",
            "index": 0
          },
          "showValue": "never",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "xAxis": {
            "mode": "series",
            "show": true
          },
          "yAxis": {
            "format": "s",
            "logBase": 1,
            "show": true
          }
        }
      },
      {
        "id": 2,
        "title": "معدلات الاستجابة المختلفة - Response Time Percentiles",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"saler-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P50 (50th percentile)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=\"saler-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P90 (90th percentile)",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"saler-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P95 (95th percentile)",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"saler-api\"}[5m])) by (le)) * 1000",
            "legendFormat": "P99 (99th percentile)",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 0,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 6,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "always",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "ms"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "legend": {
            "calcs": ["mean", "max"],
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        }
