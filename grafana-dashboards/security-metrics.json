{
  "dashboard": {
    "id": null,
    "title": "مقاييس الأمان - Security Metrics",
    "tags": ["saler", "monitoring", "security", "safety"],
    "timezone": "Asia/Riyadh",
    "refresh": "1m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "محاولات الدخول المشبوهة - Suspicious Login Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(failed_login_attempts_total[1h]))",
            "legendFormat": "Failed Logins (1h)",
            "refId": "A"
          },
          {
            "expr": "sum(increase(successful_logins_total[1h]))",
            "legendFormat": "Successful Logins (1h)",
            "refId": "B"
          },
          {
            "expr": "sum(rate(suspicious_ip_attempts_total[5m]))",
            "legendFormat": "Suspicious IPs (5m)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "text": {},
          "textMode": "value_and_name"
        }
      },
      {
        "id": 2,
        "title": "معدل محاولات الاختراق - Attack Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ddos_attempts_total[5m]))",
            "legendFormat": "DDoS Attempts/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(sql_injection_attempts_total[5m]))",
            "legendFormat": "SQL Injection Attempts/sec",
            "refId": "B"
          },
          {
            "expr": "sum(rate(xss_attempts_total[5m]))",
            "legendFormat": "XSS Attempts/sec",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "text": {},
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "شهادات SSL/TLS - SSL/TLS Certificates",
        "type": "stat",
        "targets": [
          {
            "expr": "ssl_certificate_valid_days_remaining",
            "legendFormat": "Days Until Expiry",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "displayMode": "color-background"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 7},
                {"color": "green", "value": 30}
              ]
            },
            "unit": "d"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "text": {},
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "title": "محاولات الوصول حسب العنوان - Access Attempts by IP",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(rate(access_attempts_total[24h])) by (source_ip))",
            "legendFormat": "{{source_ip}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "color-background-solid"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        }
      },
