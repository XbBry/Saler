# üåç Environment Variables for Saler SaaS Platform
# Copy this file to .env and fill in your actual values

# =====================================
# üîê CORE APPLICATION SETTINGS
# =====================================

# Application
APP_NAME=Saler
APP_VERSION=1.0.0
APP_DESCRIPTION="AI-Powered Lead Management SaaS Platform"
APP_ENV=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://saler_user:saler_password@localhost:5432/saler
DATABASE_TYPE=postgresql

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Database SSL Configuration (Production)
DB_SSL_MODE=require
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CA=/path/to/ca-cert.pem

# Database Performance Settings
DB_ECHO=false
DB_ECHO_POOL=false
DB_FUTURE=true

# Database Migrations
DB_AUTO_MIGRATE=true
DB_MIGRATION_PATH=alembic

# Read Replica Database (Optional for scaling)
# READ_DATABASE_URL=postgresql://saler_user:saler_password@localhost:5433/saler

# Redis Configuration (for queue and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_SSL=false

# Redis Connection Pool Settings
REDIS_POOL_SIZE=100
REDIS_MAX_CONNECTIONS=1000
REDIS_CONNECTION_TIMEOUT=10
REDIS_READ_TIMEOUT=5

# Redis Cluster Mode (uncomment if using Redis cluster)
# REDIS_CLUSTER=true
# REDIS_CLUSTER_NODES=redis://redis-node1:7000,redis://redis-node2:7000,redis://redis-node3:7000

# Redis Memory Policy
REDIS_MEMORY_POLICY=allkeys-lru

# =====================================
# ü§ñ AI & MACHINE LEARNING
# =====================================

# OpenAI API (for lead analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# =====================================
# üì± MESSAGING INTEGRATIONS
# =====================================

# Twilio (for SMS and WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# UltraMsg (WhatsApp Business API)
ULTRAMSG_API_KEY=your-ultramsg-api-key
ULTRAMSG_INSTANCE_ID=your-ultramsg-instance-id
ULTRAMSG_WHATSAPP_API_URL=https://api.ultramsg.com

# =====================================
# üõí E-COMMERCE INTEGRATIONS
# =====================================

# Shopify
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token

# WooCommerce
WOOCOMMERCE_API_KEY=your-woocommerce-api-key
WOOCOMMERCE_API_SECRET=your-woocommerce-api-secret
WOOCOMMERCE_SITE_URL=https://your-woocommerce-site.com

# =====================================
# üìä META/FACEBOOK ADS INTEGRATION
# =====================================

# Meta/Facebook Business
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
META_ADS_ACCOUNT_ID=your-meta-ads-account-id

# =====================================
# üí≥ BILLING & PAYMENT
# =====================================

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =====================================
# üìß EMAIL & NOTIFICATIONS
# =====================================

# SMTP Settings (for transactional emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@saler.com
SMTP_FROM_NAME=Saler

# =====================================
# üåê EXTERNAL SERVICES
# =====================================

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=saler-uploads

# CDN (Cloudflare)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =====================================
# üîç SEARCH & ANALYTICS
# =====================================

# ElasticSearch (optional for advanced search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =====================================
# üõ°Ô∏è MONITORING & LOGGING
# =====================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog (Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Log Level
LOG_LEVEL=INFO

# =====================================
# üöÄ DEPLOYMENT SETTINGS
# =====================================

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Production URLs (update for production)
PRODUCTION_API_URL=https://api.saler.com
PRODUCTION_SITE_URL=https://saler.com
PRODUCTION_WS_URL=wss://api.saler.com

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
ALLOWED_HEADERS=*

# =====================================
# üîß DEVELOPMENT SETTINGS
# =====================================

# Database seed
SEED_DATABASE=false

# Auto-migrate on startup
AUTO_MIGRATE=false

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# =====================================
# üõ†Ô∏è DEVELOPMENT TOOLS
# =====================================

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Debug Settings
DEBUG_TOOLBAR_ENABLED=true
DEBUG_TOOLBAR_HOST=0.0.0.0
DEBUG_TOOLBAR_PORT=8001

# Hot Reload
AUTO_RELOAD=true
AUTO_RELOAD_EXTENSIONS=py,html,js,css

# Test Database
TEST_DATABASE_URL=postgresql://saler_test:saler123@localhost:5432/saler_test
TEST_REDIS_URL=redis://localhost:6379/15

# =====================================
# üìÅ FILE UPLOADS
# =====================================

# Local File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,csv

# =====================================
# üîÑ BACKGROUND TASKS
# =====================================

# ARQ Worker Settings
WORKER_CONCURRENCY=5
WORKER_BATCH_SIZE=100
WORKER_TIMEOUT=3600
WORKER_MAX_TASKS_PER_CHILD=1000

# Queue Settings
QUEUE_DEFAULT_TIMEOUT=300
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60

# =====================================
# üíæ CACHING
# =====================================

# Application Cache
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=saler_cache_
CACHE_REDIS_URL=redis://localhost:6379/3

# Database Query Cache
DB_CACHE_ENABLED=true
DB_CACHE_DEFAULT_TIMEOUT=1800

# =====================================
# üìù NOTES
# =====================================

# 1. Never commit actual API keys to version control
# 2. Use different keys for development and production
# 3. Keep your .env file secure and backed up
# 4. For production, use environment variables in your hosting platform
# 5. Some services offer sandbox/test environments for development